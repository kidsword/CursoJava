package exercicios.secao3;

import java.util.Scanner;

public class Bhaskara {
	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);
		
		
		System.out.println("Equação: ax² + bx + c = 0");
		
		System.out.println("Informe o valor \"a\": ");
		double a = ent.nextDouble();
		System.out.println("Informe o valor \"b\": ");
		double b = ent.nextDouble();
		System.out.println("Informe o valor \"c\": ");
		double c = ent.nextDouble();
		
		double s1 = -1*b;
		double s2 = Math.pow(b, 2);
		double s3 = (4*a*c);
		
		double delta = Math.pow(b,2) - (4 * a * c);
		
		double superior = s1 +  Math.sqrt(s2 - s3);
		
		double inferior = 2*a;
		
		var result = superior / inferior;
		

		var stringmodel = "O Delta para os números a = %.2f, b = %.2f e c = %.2f é %.2f";
		
		System.out.println(String.format(stringmodel, a, b, c, result));

		
	}

}
