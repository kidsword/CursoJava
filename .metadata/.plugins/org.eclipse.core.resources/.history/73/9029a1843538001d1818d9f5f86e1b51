package exercicios.secao3;

import java.util.Scanner;

public class Bhaskara {
	public static void main(String[] args) {
		Scanner ent = new Scanner(System.in);
		
		System.out.println("Informe o valor \"a\": ");
		double a = ent.nextDouble();
		System.out.println("Informe o valor \"b\": ");
		double b = ent.nextDouble();
		System.out.println("Informe o valor \"c\": ");
		double c = ent.nextDouble();
		
		double result = -b + Math.sqrt(Math.pow(b, 2) - (4*a*c)) / 2*a;
		

		var stringmodel = "O Delta para os números a=%2.f, b=%2.f e c=%2.f é %2.f";
		
		System.out.println(String.format(stringmodel, a, b, c, result));

		
	}

}
