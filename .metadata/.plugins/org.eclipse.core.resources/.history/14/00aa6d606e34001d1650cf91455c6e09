package desafios;

public class DesafioLogicos {
	public static void main(String[] args) {

		var trabalho1 = false;
		var trabalho2 = true;
		boolean tomouSorvete = trabalho1 || trabalho2;
		
		if(trabalho1 ^ trabalho2) 
			System.out.print("Compramos televis達o de 32 polegadas");
		else if (trabalho1 && trabalho2)
			System.out.print("Compramos televis達o de 50 polegadas");
		else
			System.out.print("N達o Compramos nenhuma televis達o");
		
		if(tomouSorvete)
			System.out.print(" e tomamos sorvete!");
		else
			System.out.print(" ficamos com fome... :(");
		
		
	}	
	

}
